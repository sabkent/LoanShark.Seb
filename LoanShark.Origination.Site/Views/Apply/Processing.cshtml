@model LoanApplicationProcessing
@{
    ViewBag.Title = "Processing";
}

<div id="pendingView">
    we are processing your loan application and will make a desicion
</div>
<div id="acceptedView" style="display: none">
    Your loan has been approved!
</div>

<input type="button" id="sendEvent" />

@section scripts
{
    
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <script src="/SignalR/Hubs"></script>

    <script>
        var loanApplication = $.connection.loanApplication;
        loanApplication.client.complete = function () {
            console.log('loan application complete');
            $('#pendingView').hide();
            $('#acceptedView').show();
        };

        $.connection.hub.start().done(function () { });
    </script>
}

